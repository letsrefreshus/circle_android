<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.refreshus.jinwoo.circle_refreshus.ListActivity"
    >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NetworkBtn"
                android:text="@string/NtwkBtn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/testText" />

            <fragment
                android:id="@+id/listviewFrag"
                android:name="com.refreshus.jinwoo.circle_refreshus.MainActivityFragment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
</RelativeLayout>
